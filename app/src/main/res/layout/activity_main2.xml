<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:background="@color/cardview_light_background"
    tools:context=".Main2Activity">

    <ImageView
        android:id="@+id/img_biz"
        android:layout_width="360dp"
        android:layout_height="100dp"
        android:src="@drawable/biz"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_venue"
        android:layout_width="330dp"
        android:layout_height="115dp"
        android:src="@drawable/venue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_biz" />

    <ImageView
        android:id="@+id/img_quillo"
        android:layout_width="332dp"
        android:layout_height="82dp"
        android:src="@drawable/quillo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_venue" />

    <ImageView
        android:id="@+id/img_vibes"
        android:layout_width="387dp"
        android:layout_height="100dp"
        android:src="@drawable/_vibes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_quillo" />

    <Button
        android:id="@+id/btn_Match"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginLeft="52dp"
        android:background="@color/colorBlue"
        android:paddingBottom="5dp"
        android:text="Yes\nDefinately!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/btn_notMatch"
        app:layout_constraintTop_toTopOf="@+id/btn_notMatch" />

    <Button
        android:id="@+id/btn_notMatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginLeft="68dp"
        android:layout_marginTop="4dp"
        android:background="@color/colorAccent"
        android:paddingBottom="5dp"
        android:text="Not\nReally"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_vibes"
        app:layout_constraintVertical_bias="0.174" />


</androidx.constraintlayout.widget.ConstraintLayout>